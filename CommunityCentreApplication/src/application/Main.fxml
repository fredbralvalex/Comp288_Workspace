<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="210.0" prefWidth="270.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="application.MainController">
   <children>
      <RadioButton fx:id="rdBtnMember" layoutX="26.0" layoutY="69.0" mnemonicParsing="false" selected="true" text="Member">
         <toggleGroup>
            <ToggleGroup fx:id="grpMembership" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rdBtnNonMember" layoutX="26.0" layoutY="93.0" mnemonicParsing="false" text="Non-member" toggleGroup="$grpMembership" />
      <Label layoutX="29.0" layoutY="137.0" text="Age" />
      <TextField fx:id="txtAge" layoutX="58.0" layoutY="133.0" prefHeight="25.0" prefWidth="58.0" promptText="0 to 100" />
      <TextField fx:id="txtFee" editable="false" layoutX="58.0" layoutY="165.0" prefHeight="25.0" prefWidth="58.0" />
      <Label layoutX="28.0" layoutY="169.0" text="Fee" />
      <Button fx:id="btnDisplay" layoutX="145.0" layoutY="133.0" mnemonicParsing="false" onAction="#onDisplayFeeClicked" text="Display Fee">
         <tooltip>
            <Tooltip text="Display Fee" />
         </tooltip>
      </Button>
      <Button fx:id="btnExit" layoutX="145.0" layoutY="165.0" mnemonicParsing="false" onAction="#onExitClicked" prefHeight="25.0" prefWidth="76.0" text="Exit">
         <tooltip>
            <Tooltip text="Exit" />
         </tooltip>
      </Button>
      <Label layoutX="15.0" layoutY="13.0" prefHeight="38.0" prefWidth="249.0" text="Barren Community Centre" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
